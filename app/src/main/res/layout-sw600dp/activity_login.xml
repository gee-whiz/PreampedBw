                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/forgot_pass"
                android:textSize="15sp"
                android:textColor="#1F0CED" />
        </LinearLayout>

    </LinearLayout>
    <Button android:textColor="#EA2026" android:textSize="30sp" android:textStyle="bold" android:orientation="vertical" android:id="@id/btn_login" android:background="#FFF000" android:layout_width="fill_parent" android:layout_height="0.0dip" android:text="LOGIN" android:layout_weight="0.068" />
</LinearLayout>