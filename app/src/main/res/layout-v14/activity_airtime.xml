<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="za.co.empirestate.botspost.preamped.AirtimeActivity">



    <FrameLayout
        android:background="#FFF000"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView android:textSize="20.0sp"
            android:textColor="#EA2026"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Details"
            android:drawableRight="@drawable/finger_print"
            android:drawablePadding="5.0dip" />
    </FrameLayout>
    <LinearLayout
    android:id="@+id/btnBack"
    android:gravity="center"
    android:background="#EA2026"
    android:layout_width="match_parent"
    android:layout_height="25dp">
    <ImageButton
        android:id="@+id/imgBack"
        android:background="@null"
        android:src="@drawable/bck_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:text="Network Providers"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/smProviders"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:text="Amount"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spAmount"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


    <Button
        android:id="@+id/btnNext"
        android:textStyle="bold"
        android:textColor="#EA2026"
        android:text="NEXT"
        android:background="#FFF000"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom"
        android:background="#ff000000"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/first_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>


</LinearLayout>
