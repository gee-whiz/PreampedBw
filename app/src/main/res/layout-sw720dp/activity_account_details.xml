<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:background="#FFF000"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.15">
        <TextView android:textSize="30.0sp"
            android:textColor="#EA2026"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Details"
            android:drawableRight="@drawable/finger_print"
            android:drawablePadding="5.0dip" />
    </FrameLayout>
    <LinearLayout android:orientation="horizontal"
        android:background="#EA2026"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.0358">
        <ImageButton android:layout_gravity="center_vertical"
            android:id="@id/bck_btn" android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bck_btn" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:background="#ffffffff"
        android:paddingTop="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.715">
        <TextView android:textSize="30.0sp"
            android:textColor="#ff000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meter Number" />
        <EditText android:id="@+id/meter_number"
            android:background="@drawable/text_box_bg"
            android:paddingLeft="3.0dip"
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:layout_marginLeft="45.0dip"
            android:layout_marginRight="45.0dip"
            android:inputType="number"
            android:enabled="false"/>
        <TextView android:textSize="30.0sp"
            android:textColor="#ff000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount" />
        <Spinner android:id="@+id/spn_amount"
            android:paddingLeft="3.0dip"
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:layout_marginLeft="45.0dip"
            android:layout_marginRight="45.0dip" />
        <EditText android:id="@+id/txt_amount"
            android:background="@drawable/text_box_bg"
            android:paddingLeft="3.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:layout_marginLeft="45.0dip"
            android:layout_marginRight="45.0dip"
            android:inputType="number"
            android:hint="Enter your own amount"/>
    </LinearLayout>
    <Button
        android:textSize="35.0sp"
        android:textStyle="bold"
        android:textColor="#EA2026"
        android:orientation="vertical"
        android:id="@id/btn_next"
        android:background="#FFF000"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:text="NEXT"
        android:layout_weight="0.05" />
    <FrameLayout
        android:background="#ff000000"
        android:paddingTop="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.05">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/first_dot" />
    </FrameLayout>
</LinearLayout>