<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.co.empirestate.botspost.preamped.NewTransactionHistory">
<RelativeLayout
    android:id="@+id/topLay"
    android:background="#FFF000"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <TextView
      android:textSize="25dp"
        android:drawableRight="@drawable/payment_details_icon"
        android:textColor="#EA2026"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="HISTORY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/topLay"
        android:id="@+id/btnBack"
        android:gravity="center"
        android:background="#EA2026"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <ImageButton
            android:id="@+id/imgBack"
            android:background="@null"
            android:src="@drawable/bck_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<TextView
    android:visibility="gone"
    android:textSize="20dp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:id="@+id/txtWait"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:text="Please Wait...."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/electView"
        android:layout_below="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="450dp">

    </RelativeLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:id="@+id/tbW"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TabWidget
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Electricity"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="center"
                android:id="@+id/txt_top_tab1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Prepaid Airtime"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="center"
                android:id="@+id/txt_top_tab2"/>

        </TabWidget>
    </LinearLayout>
</RelativeLayout>
